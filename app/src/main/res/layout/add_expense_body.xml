<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/add_expense_payment_method"/>

        <Spinner
            android:id="@+id/spinner_payment_method"
            android:spinnerMode="dropdown"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/add_expense_category"/>
        <Spinner
            android:id="@+id/spinner_category"
            android:layout_height="wrap_content"
            android:layout_width="0px"
            android:layout_weight="2"
            style="@style/TextAppearance.AppCompat.Medium"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/add_expense_note"/>

        <EditText
            android:id="@+id/add_expense_note"
            android:layout_weight="4"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0px"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/add_expense_date"/>

        <EditText
            android:id="@+id/add_expense_date"
            android:layout_weight="4"
            android:inputType="none"
            android:focusable="false"
            android:editable="false"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/default_date"
            android:layout_width="0px"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>