<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/numpad">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TableRow
            android:weightSum="3">
            <Button
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/btn8"
                android:layout_weight="1"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/btn7"
                android:layout_weight="1"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
        </TableRow>

        <TableRow
            android:weightSum="3">
            <Button
                android:id="@+id/btn6"
                android:layout_weight="1"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/btn5"
                android:layout_weight="1"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/btn4"
                android:layout_weight="1"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
        </TableRow>

        <TableRow
            android:weightSum="3">
            <Button
                android:id="@+id/btn3"
                android:layout_weight="1"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/btn2"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/btn1"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
        </TableRow>

        <TableRow
            android:weightSum="3">
            <Button
                android:id="@+id/btnDot"
                android:layout_weight="1"
                android:text="."
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/btn0"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/numpad_buttons"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:background="@android:color/transparent"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>